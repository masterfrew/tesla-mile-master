# Plaats je echte waarden in .env (niet in versiebeheer)
VITE_PUBLIC_BASE_URL=https://kmtrack.nl

# Tesla OAuth / Fleet
TESLA_CLIENT_ID=replace_with_client_id
TESLA_CLIENT_SECRET=replace_with_client_secret
TESLA_REDIRECT_URI=https://kmtrack.nl/oauth/tesla/callback
TESLA_AUTH_HOST=https://auth.tesla.com
TESLA_TOKEN_PATH=/oauth2/v3/token
TESLA_AUTHORIZE_PATH=/oauth2/v3/authorize
TESLA_FLEET_API_HOST=https://fleet-api.prd.eu.vn.cloud.tesla.com

# Supabase (gebruik service role key voor server-side functions)
SUPABASE_URL=https://your-supabase-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=replace_with_service_role_key

# Optional: region hint
TESLA_REGION=eu
